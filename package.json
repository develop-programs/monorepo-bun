{
  "name": "bun-monorepo-template",
  "version": "1.0.0",
  "description": "A comprehensive bun monorepo starter template built as a monorepo for junior developers",
  "keywords": [
    "monorepo",
    "react",
    "typescript",
    "vite",
    "starter-kit",
    "junior-developer",
    "template",
    "bun"
  ],
  "author": "Shreyansh Awadhiya",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://www.npmjs.com/package/bun-monorepo-template"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/develop-programs/monorepo-bun.git"
  },
  "homepage": "https://github.com/develop-programs/monorepo-bun#readme",
  "bugs": {
    "url": "https://github.com/develop-programs/monorepo-bun.git"
  },
  "files": [
    "apps/web/src/",
    "apps/web/public/",
    "apps/web/package.json",
    "apps/web/vite.config.ts",
    "apps/web/tsconfig*.json",
    "apps/web/eslint.config.js",
    "apps/web/index.html",
    "apps/web/README.md",
    "apps/admin/src/",
    "apps/admin/public/",
    "apps/admin/package.json",
    "apps/admin/vite.config.ts",
    "apps/admin/tsconfig*.json",
    "apps/admin/eslint.config.js",
    "apps/admin/index.html",
    "apps/admin/README.md",
    "apps/server/src/",
    "apps/server/package.json",
    "apps/server/eslint.config.js",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"cd apps/web && bun run dev\" \"cd apps/admin && bun run dev\" \"cd apps/server && bun run dev\" --names \"web,admin,server\" --prefix-colors \"blue,green,yellow\"",
    "start": "concurrently \"cd apps/web && bun run start\" \"cd apps/admin && bun run start\" \"cd apps/server && bun run start\" --names \"web,admin,server\" --prefix-colors \"blue,green,yellow\"",
    "build": "cd apps/web && bun run build && cd ../admin && bun run build",
    "dev:web": "cd apps/web && bun run dev",
    "dev:admin": "cd apps/admin && bun run dev",
    "dev:server": "cd apps/server && bun run dev",
    "start:web": "cd apps/web && bun run start",
    "start:admin": "cd apps/admin && bun run start",
    "start:server": "cd apps/server && bun run start",
    "build:web": "cd apps/web && bun run build",
    "build:admin": "cd apps/admin && bun run build",
    "clean": "rm -rf apps/*/node_modules apps/*/dist apps/*/.vite apps/*/.tmp && rm -rf node_modules",
    "postinstall": "echo 'âœ… Portfolio template ready! Run: bun run dev'"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "workspaces": [
    "apps/*"
  ]
}
